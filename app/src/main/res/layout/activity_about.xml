<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.AboutActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_back"
            app:title="About"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Baby Growth Image -->
            <ImageView
                android:id="@+id/ivBabyGrowth"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/i_logo"
                android:contentDescription="Baby Growth" />

            <!-- Baby Growth Title -->
            <TextView
                android:id="@+id/tvBabyGrowthTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baby Growth"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/secondary_color"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Baby Growth App Goal Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="17dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Baby Growth App Goal Title -->
                    <TextView
                        android:id="@+id/tvAppGoalTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baby Growth App Goal"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="160dp"
                        android:layout_height="2dp"
                        android:background="@color/secondary_color"
                        android:layout_marginBottom="8dp" />

                    <!-- Baby Growth App Goal Content -->
                    <TextView
                        android:id="@+id/tvAppGoalContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="It all started with our awareness of the importance of meeting the nutritional needs of every individual to maintain physical and psychological health. We delved deeper and realized that the beginning of this nutrition should be addressed since the time inside the motherâ€™s womb and during the golden age of a child, which is the first one thousand days of life. With the high cases of stunting in Indonesia, it became the main reason for us to initiate this project. We hope that our project can bring positive impact and assist the government in reducing the number of stunting cases in Indonesia."
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:justificationMode="inter_word" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Baby Growth App Creator Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="17dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Baby Growth App Creator Title -->
                    <TextView
                        android:id="@+id/tvAppCreatorTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baby Growth App Creator"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="185dp"
                        android:layout_height="2dp"
                        android:background="@color/secondary_color"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="14dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Afriza Meidio Andhana"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Asfara Rikza Iswati"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reyhan Ezra Bimantara"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Muhamad Rivan S."
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ahmad Ammar Bahtiar"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Muhammad Ardhia N."
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Evlyn Jane Putri"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Machine Learning"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Machine Learning"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Machine Learning"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cloud Computing"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cloud Computing"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Development"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Development"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>