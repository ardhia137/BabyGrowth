<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.AboutActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        app:liftOnScrollColor="@color/primary_color"
        tools:ignore="MissingConstraints">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            app:navigationIcon="@drawable/ic_back"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/white"
            app:title="About" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/appbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Baby Growth Image -->
            <ImageView
                android:id="@+id/ivBabyGrowth"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/i_logo"
                android:contentDescription="Baby Growth" />

            <!-- Baby Growth Title -->
            <TextView
                android:id="@+id/tvBabyGrowthTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baby Growth"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/secondary_color"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Baby Growth App Goal Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="17dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Baby Growth App Goal Title -->
                    <TextView
                        android:id="@+id/tvAppGoalTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baby Growth App Goal"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="160dp"
                        android:layout_height="2dp"
                        android:background="@color/secondary_color"
                        android:layout_marginBottom="8dp" />

                    <!-- Baby Growth App Goal Content -->
                    <TextView
                        android:id="@+id/tvAppGoalContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="
It all began with our recognition of the crucial need to meet the nutritional requirements of individuals for both physical and psychological health. We found that nutrition should be prioritized from the time a child is in the womb and during their first thousand days of life. The high incidence of stunting in Indonesia motivated us to start this project. We aim to positively impact and support the government's efforts to reduce stunting cases in the country."
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:justificationMode="inter_word" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Baby Growth App Creator Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="17dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Baby Growth App Creator Title -->
                    <TextView
                        android:id="@+id/tvAppCreatorTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baby Growth App Creator"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="185dp"
                        android:layout_height="2dp"
                        android:background="@color/secondary_color"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="14dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Afriza Meidio Andhana"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Asfara Rikza Iswati"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reyhan Ezra Bimantara"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Muhamad Rivan S."
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ahmad Ammar Bahtiar"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Muhammad Ardhia N."
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Evlyn Jane Putri"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Machine Learning"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Machine Learning"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Machine Learning"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cloud Computing"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cloud Computing"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Development"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Development"
                                android:textSize="12sp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>