<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    tools:context=".ui.bottomNav.home.HomeFragment">
    <!-- Header -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:background="@drawable/header_bg">

                <TextView
                    android:id="@+id/greeting"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="11dp"
                    android:maxLines="2"
                    android:layout_marginTop="16dp"
                    android:text="Hello Asfara,"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    />

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/greeting"
                    android:layout_below="@id/greeting"
                    android:layout_marginTop="6dp"
                    android:text="Let's Plan Your Meal!"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/illustration"
                    android:layout_width="229dp"
                    android:layout_height="184dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="-14dp"
                    android:src="@drawable/i_baby" />
            </RelativeLayout>


            <LinearLayout

                android:id="@+id/meal_planner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                >

                <TextView
                    android:paddingHorizontal="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meal Planner"
                    android:textColor="#717070"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_semibold" />

                <View
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="120dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="1dp"
                    android:background="#FFA500" />

                <!-- Nutritional Info Section -->
                <LinearLayout
                    android:paddingHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <!-- Left Column -->
                    <LinearLayout
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingTop="8dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tv_calories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="705"
                                android:textColor="#717070"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="-6dp"
                                android:layout_marginEnd="8dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="/"
                                android:textColor="#717070"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_r_calories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="-6dp"
                                android:layout_marginEnd="8dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="725"
                                android:textColor="@color/primary_color"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="-5dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Calories"
                                android:textSize="13sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <TextView
                                android:id="@id/tv_protein"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="0.8"
                                android:textColor="#717070"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="-6dp"
                                android:layout_marginEnd="8dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="/"
                                android:textColor="#717070"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_r_protein"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="-6dp"
                                android:layout_marginEnd="8dp"
                                android:fontFamily="@font/poppins_bold"
                                android:text="8"
                                android:textColor="@color/primary_color"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="-5dp"
                                android:fontFamily="@font/poppins_light"
                                android:text="Gr"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Proteins"
                                android:textSize="13sp" />
                        </LinearLayout>


                    </LinearLayout>

                    <!-- Right Column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingTop="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="4dp"
                            >
                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/tv_carbo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="80"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="#717070"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="-6dp"
                                android:text="/"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="#717070"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:id="@+id/tv_r_carbo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="-6dp"
                                android:text="82"
                                android:textSize="13sp"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/primary_color"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="-5dp"
                                android:fontFamily="@font/poppins_light"
                                android:text="Gr"
                                android:textSize="12sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:text="Carbo"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="13sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="6dp"
                            android:padding="4dp"
                            >
                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/tv_fat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="19"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="#717070"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="-6dp"
                                android:text="/"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="#717070"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:id="@+id/tv_r_fat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="-6dp"
                                android:text="36"
                                android:textSize="13sp"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/primary_color"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="-5dp"
                                android:fontFamily="@font/poppins_light"
                                android:text="Gr"
                                android:textSize="12sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp"
                                android:text="Fat"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="13sp"/>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="*Kebutuhan Nutrisi Perhari"
                    android:textColor="#717070"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingTop="8dp"/>




                <!-- Meal Items -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="393dp"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp">

                    <!-- MPASI Guideline -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardMpasiGuideline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:strokeColor="@android:color/darker_gray"
                       >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:padding="16dp"
                            android:background="@drawable/gradientorange_bg">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MPASI Guideline"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/poppins_semibold"/>

                                <TextView
                                    android:id="@+id/tvMpasiGuideline"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MPASI texture based on baby's age"
                                    android:textColor="#FFFFFF"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/poppins_light"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="91dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="-10dp"
                                android:src="@drawable/i_guideline" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>



                    <!-- Breakfast -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardBreakfast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:strokeColor="@android:color/darker_gray">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/i_breakfast" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="Breakfast"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/poppins_semibold" />

                                <TextView
                                    android:id="@+id/tvBreakfast"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 Cal"
                                    android:textColor="#7D7B7B"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins_medium"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="16dp"
                                android:src="@drawable/ic_add" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Lunch -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardLunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:strokeColor="@android:color/darker_gray">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/i_lunch" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lunch"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/poppins_semibold" />

                                <TextView
                                    android:id="@+id/tvLunch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:text="0 Cal"
                                    android:textColor="#7D7B7B"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins_medium"
                                    />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="16dp"
                                android:src="@drawable/ic_add" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Dinner -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardDinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:strokeColor="@android:color/darker_gray">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/i_dinner" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="16dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dinner"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/poppins_semibold" />

                                <TextView
                                    android:id="@+id/tvDinner"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0 Cal"
                                    android:textColor="#7D7B7B"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/poppins_medium"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="16dp"
                                android:src="@drawable/ic_add" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <!-- Recommendation Menu Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="50dp"
                    android:paddingBottom="16dp"
                    >

                    <RelativeLayout
                        android:paddingHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvRecommendation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recommendation"
                            android:textColor="#717070"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_semibold"/>

                        <TextView
                            android:id="@+id/tvSee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="See All.."
                            android:textColor="#FFA500"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_semibold"/>
                    </RelativeLayout>

                    <View
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="150dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="4dp"
                        android:background="#FFA500" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/listRecomendation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>